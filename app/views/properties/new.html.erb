


<!DOCTYPE html>
<html lang="en">
<head>
<title>CSS Template</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
* {
  box-sizing: border-box;
}
.header {
  background-color: #f1f1f1;
  padding: 20px;
  text-align: center;
}
body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

/* Style the side navigation */
.sidenav {
  height: 100%;
  width: 200px;
  position: fixed;
  z-index: 1;
  top: 120px;
  left: 0;
  background-color: #111;
  overflow-x: hidden;
}


/* Side navigation links */
.sidenav a {
  color: white;
  padding: 16px;
  text-decoration: none;
  display: block;
}

/* Change color on hover */
.sidenav a:hover {
  background-color: #ddd;
  color: black;
}

/* Style the content */
.content {
  margin-left: 200px;
  padding-left: 20px;

}




input[type=email], input[type=text], input[type=password] {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  box-sizing: border-box;
}
.button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  left:50px;
  position:relative;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
}
.button2:hover {
  box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
}

.container {
  border-radius: 15px 50px;

  padding: 16px;
  position: absolute;
  top: 200px;
  left:700px;
  width: 300px;
  height: 200px;
  display:inline-block;
}
</style>
</head>
<body>
  <div class="header">
  <h1>Fresh Properties</h1>
</div>

<div class="sidenav">
  <a href=<%=new_property_path%>>Add property</a>
  <a href=<%=your_properties_path%>>My Properties</a>
  <a href=<%=interested_properties_path%>>Interested Properties</a>
  <a href=<%=filtered_properties_path%>>Rent</a>

  <a href=<%=logout_path%>>Logout</a>
</div>
  <%= form_for(@property) do |f| %>

<div class="container">

          <%= f.label :name %><br>
          <%= f.text_field :name ,autofocus: true,required:true%>


          <%= f.label :location %>
          <%= f.text_field :location,autofocus: true,required:true %>

          <%= f.label :property_type %>
          <%= f.text_field :property_type,autofocus: true,required:true %>


          <%= f.label :rent %>
          <%= f.text_field :rent ,autofocus: true,required:true%>

          <%= f.label :image %>
          <%= f.file_field :image %>

          <%= f.submit class:"button button2" %>

      <% end %>
</div>

</body>
</html>
