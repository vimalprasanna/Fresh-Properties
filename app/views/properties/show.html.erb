




<!DOCTYPE html>
<html lang="en">
<head>
<title>CSS Template</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
* {
  box-sizing: border-box;
}
.header {
  background-color: #f1f1f1;
  padding: 20px;
  text-align: center;
}
body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
}

/* Style the side navigation */
.sidenav {
  height: 100%;
  width: 200px;
  position: fixed;

  z-index: 1;
  top: 120px;
  left: 0;
  background-color: #111;
  overflow-x: hidden;
}
.split {
  padding: 10px;
  border: 5px solid gray;
  height: 100%;
  width: 14.285%;
  float:left;
  position: relative;
  z-index: 1;
  overflow-x: scroll;
  padding-top: 20px;
  text-align:left;

}


/* Side navigation links */
.sidenav a {
  color: white;
  padding: 16px;
  text-decoration: none;
  display: block;
}

/* Change color on hover */
.sidenav a:hover {
  background-color: #ddd;
  color: black;
}

/* Style the content */
.content {
  margin-left: 200px;
  padding-left: 20px;

}

.img{
  max-width: 100%;
  max-height: 100%;
  display: block;
}


input[type=email], input[type=text], input[type=password] {
  width: 100%;
  padding: 12px 20px;
  margin: 8px 0;
  display: inline-block;
  border: 1px solid #ccc;
  box-sizing: border-box;
}
.button {
  background-color: #4CAF50; /* Green */
  border: none;
  color: white;
  left:10px;
  position:relative;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
}
.button2:hover {
  box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
}

.container {
  border-radius: 15px 50px;

  padding: 16px;
  position: absolute;
  top: 130px;
  left:190px;
  width: 1500px;
  height: 700px;
  display:inline-block;
  overflow:scroll;
  text-align:center;
}
.container2{
  padding: 10px;
  border: 5px solid white;

  position:relative;
  height:200px;
  width:100%;
  background-color:LightGray;

}
</style>
</head>
<body>
  <div class="header">
  <h1>Fresh Properties</h1>
</div>

<div class="sidenav">
  <a href=<%=new_property_path%>>Add property</a>
  <a href=<%=your_properties_path%>>My Properties</a>
  <a href=<%=filtered_properties_path%>>Rent</a>
  <a href=<%=interested_properties_path%>>Interested Properties</a>

  <a href=<%=logout_path%>>Logout</a>
</div>


<div class="container">
<%if @property.empty?%>
<%="No properties"%>
<%else%>
  <% @property.each do |property| %>
  <div class="container2">


    <div class="split">
      Name :
  <%= property.name %>
  </div>

  <div class="split">
    Location :
<%= property.location %>
</div>

<div class="split">
  Type :
<%= property.property_type%>
</div>
<div class="split">
  <div class="img">
    <%= image_tag(property.image)%>
  </div>
</div>
<div class="split">
  Rent :
<%= property.rent%>
</div>
<% if property.availability=="available"%>
<div class="split">
 <% if logged_in? and (current_user == property.owner) %>

				<%=link_to "Interested Users",property_interested_users_path(property),class: "button button2"%>
			<% end %>
</div>
<% else %>
<div class="split">
 <% if logged_in? and (current_user == property.owner) %>

				<%=link_to "unblock",unblock_property_path(property),class: "button button2"%>
			<% end %>
</div>
<%end%>
<div class="split">
 <% if logged_in? and (current_user == property.owner) %>

				<%=link_to "Remove",property_path(property), method: :delete, data: {confirm:"Are you sure you want to remove?"}, class: "button button2"%>
        <br>
        <br>
     <%=link_to "Comments",property_user_comments_path(:property_id=> property.id), class: "button button2"%>
	<% end %>
</div>


</div>
<% end %>
<%end%>
</div>




</body>
</html>
